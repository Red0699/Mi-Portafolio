---
import { PROJECTS } from "@/data/projects";
import LinkButton from "./LinkButton.astro";
import GitHub from "./icons/GitHub.astro";
import Link from "./icons/Link.astro";
---

<div class="flex flex-col gap-y-16">
  {PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
      
      {/* Imagen */}
      <div class="w-full md:w-1/2">
        <div class="relative overflow-hidden rounded-xl border dark:border-gray-700 shadow-xl transition-transform duration-500 ease-in-out md:group-hover:-translate-y-1 md:group-hover:shadow-2xl">
          <img
            alt={`Imagen del proyecto ${title}`}
            src={image}
            loading="lazy"
            class="w-full h-[240px] sm:h-[280px] md:h-[320px] object-cover rounded-xl transition-transform duration-300 ease-in-out md:group-hover:scale-105"
          />
        </div>
      </div>

      {/* Información */}
      <div class="w-full md:w-1/2 md:max-w-lg">
        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
          {title}
        </h3>

        {/* Tags */}
        <div class="flex flex-wrap mt-2">
          <ul class="flex flex-row mb-2 gap-x-2 flex-wrap">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex items-center gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
        </div>

        {/* Descripción */}
        <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>

        {/* Enlaces */}
        <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
      </div>
    </article>
  ))}
</div>
